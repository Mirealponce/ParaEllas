@model OnlineShoppingStore.Models.DAL.telefono

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div>
            <center>
                <h2 style="        margin-top: 100px;

        ">
                    Editar teléfono de contacto
                </h2>
                <hr style=" margin-left: 60px; margin-right: 60px; " />
            </center>
        </div>
        <style>
            .control-label {
                font-size: medium;
            }

            .form-control {
                width: 326px;
            }
        </style>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idtelefono)

            <div class="form-group">
                <label class="control-label col-md-2" for="Ntelefono_"> Número de teléfono: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ntelefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ntelefono, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar teléfono" class="btn btn-success" />
                </div>
            </div>
        </div>
        <input style="
        width: 8px;
        height: 6px;
        border-left-width: 0px;
        border-top-width: 0px;
        border-right-width: 0px;
        border-bottom-width: 0px;
    " id="Cliente_idCliente" name="Cliente_idCliente" type="text"
               value="@ViewBag.Cliente_idCliente " />
        @Html.ValidationMessageFor(model => model.Cliente_idCliente, "", new { @class = "text-danger" })
    }

</body>
</html>
