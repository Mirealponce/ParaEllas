@model OnlineShoppingStore.Models.DAL.DetalleProducto

@{ ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item ">Productos</li>
        <li class="breadcrumb-item active">Modificar Productos</li>


    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Modificar Producto

        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
@Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>DetalleProducto</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idDetalleProducto)

                <div class="form-group">
                    @Html.LabelFor(model => model.Talla, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Talla, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Talla, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CantidadStock, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CantidadStock, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CantidadStock, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                   <label class="control-label col-md-2">Producto</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Producto_idProducto", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Producto_idProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <a onclick="window.history.back();" class="btn btn-info">Cancelar</a>

                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
                }
        </div>
    </div>

</div>
