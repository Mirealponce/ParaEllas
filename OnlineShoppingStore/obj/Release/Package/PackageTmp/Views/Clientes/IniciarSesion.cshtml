
@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <center><h2 style=" margin-top: 100px; ">Iniciar Sesión con Su Cuenta <hr style=" margin-left: 60px; margin-right: 60px; " /></h2></center>

<form action="IniciarSesion" method="post">

  
    <center>
        <div style="box-shadow: 10px 10px 27px 0px rgba(171,171,171,1); margin-left: 0px; height: 250px; width: 800px;">


            <div class="form-horizontal">

                <br />
                <br />
                <div class="form-group">
                    <center>
                        <label class="control-label col-md-2" for="Nombre_" style=" margin-left: 100px;padding-left: 0px;"> Correo electrónico </label>
                    </center>
                    <br />
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="usuario" name="usuario" type="text"
                               style=" width: 326px; margin-top: -25px; margin-left: 100px; " />

                    </div>
                </div>


                <div class="form-group">
                    <center>
                        <label class="control-label col-md-2" for="Nombre_" style="margin-left: 100px; padding-left: 0px;"> Contraseña </label>
                    </center>
                    <br />
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="pass" type="password" name="pass"
                               style=" width: 326px; margin-top: -25px; margin-left: 100px; " />

                    </div>
                </div>

                <button type="submit" class="btn btn-warning">Ingresar</button>
                <br />
                <hr />
                <center>
                    <p>¿No tienes una cuenta?</p>
                    <a href="/Clientes/Create">Crea una aquí.</a>
                </center>




            </div>


        </div>
    </center>
</form>
